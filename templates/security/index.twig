{% extends 'layout-light.twig' %}


{% block content %}
    <div class="box">
        <div class="box__column box__column--image">
            <img src="{{ app.baseUrl }}/images/background-table.jpg" alt="" />
{#            <img src="{{ app.baseUrl }}/images/background-dishes.png" alt="" />#}
        </div>

        <div class="box__column">
            {% block box %}
                <h2>{{ 'auth.hello'|trans }}</h2>
                <form id="register-login-form" class="form form--animated" method="POST" action="">
                    <p class="flash" data-message></p>

                    <div class="form__row">
                        <input id="register-login-email" class="form__input" name="email" type="email" placeholder="" value="{{ email }}" />
                        <label for="register-login-email" class="form__label">{{ 'auth.email'|trans }}</label>
                    </div>

                    <div class="form__row">
                        <button class="form__button" type="submit">{{ 'auth.registerLogin'|trans }}</button>
                    </div>
                </form>

                <div class="box__info box__info--bottom-right" data-visible="register-login-info">
                    <i class="fas fa-info-circle"></i>
                    <div id="register-login-info" class="box__info--text hidden">
                        {{ 'auth.infoText'|trans }}
                    </div>
                </div>
            {% endblock %}
        </div>
    </div>
{% endblock %}