{% extends 'base.twig' %}


{% block body %}
    <header class="header">
        {% block header %}
            {% include 'components/header.twig' %}
        {% endblock %}
    </header>

    <main class="main">
        <aside>
            {% block menu %}
                {% include 'components/menu.twig' %}
            {% endblock %}
        </aside>
        <div class="container">
            {% block content %}{% endblock %}
        </div>
    </main>

    <footer class="footer">
        {% block footer %}
            {% include 'components/footer.twig' %}
        {% endblock %}
    </footer>
{% endblock %}